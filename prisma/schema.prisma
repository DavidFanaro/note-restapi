datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id      String      @id @default(uuid())
    username String
    email String
    password String
    created_at DateTime @default(now())
    update_at DateTime @updatedAt()
    notes Note[]
}

model Note {
    id      String      @id @default(uuid())
    text    String
    created_at DateTime @default(now())
    update_at DateTime @updatedAt()
    author    User  @relation(fields: [authorId], references: [id])
    authorId  String
}